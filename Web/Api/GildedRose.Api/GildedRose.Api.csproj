<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>GildedRose.Api</AssemblyName>
    <RootNamespace>GildedRose.Api</RootNamespace>
    <CodeAnalysisRuleSet>..\..\..\Analyzers\Stylecop.ruleset</CodeAnalysisRuleSet>
    <CodeAnalysisAdditionalOptions>..\..\..\Analyzers\stylecop.json</CodeAnalysisAdditionalOptions>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="4.3.1" />
    <PackageReference Include="Dapper" Version="1.50.5" />
    <PackageReference Include="FluentValidation.AspNetCore" Version="8.0.100" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.1.5" />
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta009">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Components\Configuration\GildedRose.Configuration.csproj" />
    <ProjectReference Include="..\..\..\Components\Core\GildedRose.Core.csproj" />
    <ProjectReference Include="..\..\..\Components\DataStore\GildedRose.DataStore.csproj" />
    <ProjectReference Include="..\..\..\Components\Exceptions\GildedRose.Exceptions.csproj" />
    <ProjectReference Include="..\..\..\Components\GildedRose.Contracts\GildedRose.Contracts.csproj" />
    <ProjectReference Include="..\..\..\Components\GildedRose.Entities\GildedRose.Entities.csproj" />
    <ProjectReference Include="..\..\..\Components\GildedRose.Managers\GildedRose.Managers.csproj" />
    <ProjectReference Include="..\..\..\Components\Http\GildedRose.HttpClient.csproj" />
  </ItemGroup>

</Project>
