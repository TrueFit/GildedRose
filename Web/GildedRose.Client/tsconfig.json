{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "./GildedRose.App/src/app/*"
      ],
      "core/*": [
        "./GildedRose.Core/src/*"
      ],      
      "views": [
        "./GildedRose.App/src/app/views/"
      ],   
      "views/*": [
        "./GildedRose.App/src/app/views/*"
      ],   
      "models": [
        "./GildedRose.App/src/app/models/"
      ],
      "models/*": [
        "./GildedRose.App/src/app/models/*"
      ],      
      "components": [
        "./GildedRose.App/src/app/components/"
      ],
      "components/*": [
        "./GildedRose.App/src/app/components/*"
      ]             
    },
    "lib": [
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "es2018",
      "scripthost",
      "dom",
      "dom.iterable",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2016.array.include",
      "es2017.object",
      "es2017.intl",
      "es2017.sharedmemory",
      "es2017.string",
      "es2017.typedarrays",
      "es2018.intl",
      "es2018.promise",
      "es2018.regexp",
      "esnext",
      "esnext.asynciterable",
      "esnext.array",
      "esnext.intl",
      "esnext.symbol"
    ],
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./**/*"
  ]
}
