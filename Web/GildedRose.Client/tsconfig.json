{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "importHelpers": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["./GildedRose.App/src/app/*"]
    },    
    "lib": [
        "ES6",
        "ES2015",
        "ES7",
        "ES2016",
        "ES2017",
        "ES2018",
        "ScriptHost",
        "DOM",
        "DOM.Iterable",
        "ES2015.Core",
        "ES2015.Collection",
        "ES2015.Generator",
        "ES2015.Iterable",
        "ES2015.Promise",
        "ES2015.Proxy",
        "ES2015.Reflect",
        "ES2015.Symbol",
        "ES2015.Symbol.WellKnown",
        "ES2016.Array.Include",
        "ES2017.object",
        "ES2017.Intl",
        "ES2017.SharedMemory",
        "ES2017.String",
        "ES2017.TypedArrays",
        "ES2018.Intl",
        "ES2018.Promise",
        "ES2018.RegExp",
        "ESNext",
        "ESNext.AsyncIterable",
        "ESNext.Array",
        "ESNext.Intl",
        "ESNext.Symbol"
    ],
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./**/*"
  ]
}

