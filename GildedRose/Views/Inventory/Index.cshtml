@model IEnumerable<GildedRose.Inventory.Product>

    @{
    ViewData["Title"] = "Index";
    }

    <h2>Gilded Rose Inventory</h2>

    <p>
        <a asp-action="AddItem">Create New</a>
    </p>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.name).ToUpperInvariant()
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.category).ToUpper()
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sellin).ToUpper()
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quality).ToUpper()
                </th>
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sellin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quality)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                        @Html.ActionLink("Details", "Details", "Inventory", new {id = item.Id}, null) 
                        @*@Html.ActionLink("Delete", "Delete",  "Inventory", new {id = item.Id}, null)*@
                    </td>
                </tr>
}
        </tbody>
    </table>
<div class="row">
    <div class="col-xs-1">
        @using (Html.BeginForm("CloseDay", "Inventory", FormMethod.Post))
        {
            <input type="submit" name="CloseDay" value="End Day" class="btn-default">
        }
    </div>

    <div class="col-xs-1">
        @using (Html.BeginForm("ShowTrash", "Inventory", FormMethod.Post))
        {
            <input type="submit" name="ShowTrash" value="Show Trash" class="btn-default">
        }
    </div>
</div>
